{
	"info": {
		"_postman_id": "ai-assistant-platform",
		"name": "AI Assistant Platform",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Register",
			"request": {
				"method": "POST",
				"header": [
					{ "key": "Content-Type", "value": "application/json" }
				],
				"body": {
					"mode": "raw",
					"raw": "{\"email\":\"test@example.com\",\"password\":\"password\",\"name\":\"Test User\"}"
				},
				"url": {
					"raw": "{{base_url}}/api/auth/register",
					"host": ["{{base_url}}"],
					"path": ["api", "auth", "register"]
				}
			}
		},
		{
			"name": "Login",
			"request": {
				"method": "POST",
				"header": [
					{ "key": "Content-Type", "value": "application/json" }
				],
				"body": {
					"mode": "raw",
					"raw": "{\"email\":\"test@example.com\",\"password\":\"password\"}"
				},
				"url": {
					"raw": "{{base_url}}/api/auth/login",
					"host": ["{{base_url}}"],
					"path": ["api", "auth", "login"]
				}
			}
		},
		{
			"name": "Create Org",
			"request": {
				"method": "POST",
				"header": [
					{ "key": "Content-Type", "value": "application/json" },
					{ "key": "Authorization", "value": "Bearer {{jwt}}" }
				],
				"body": {
					"mode": "raw",
					"raw": "{\"name\":\"My AI Org\"}"
				},
				"url": {
					"raw": "{{base_url}}/api/orgs",
					"host": ["{{base_url}}"],
					"path": ["api", "orgs"]
				}
			}
		},
		{
			"name": "Chat",
			"request": {
				"method": "POST",
				"header": [
					{ "key": "Content-Type", "value": "application/json" },
					{ "key": "Authorization", "value": "Bearer {{jwt}}" }
				],
				"body": {
					"mode": "raw",
					"raw": "{\"tenant_id\":\"{{tenant_id}}\",\"message\":\"Hello AI\"}"
				},
				"url": {
					"raw": "{{base_url}}/api/chat",
					"host": ["{{base_url}}"],
					"path": ["api", "chat"]
				}
			}
		}
	]
}
